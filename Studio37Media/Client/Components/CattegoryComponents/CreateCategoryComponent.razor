@using Studio37Media.Shared.ViewModels

@inject HttpClient Http
<EditForm Model="@newCategory" OnValidSubmit="@HandleFormSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group row">
        <label for="FirstName" class="col-sm-1 col-form-label">category</label>
        <div class="col-sm-5">
            <InputText id="FirstName" class="form-control" placeholder="First Name"
                       @bind-Value="newCategory.Category1" />
        </div>
    </div>

    <div class="form-group row">
        <label for="LastName" class="col-sm-1 col-form-label">sub category</label>
        <div class="col-sm-5">
            <InputText id="LastName" class="form-control" placeholder="Last Name"
                       @bind-Value="newCategory.SubCategory" />
        </div>
    </div>
</EditForm>

@code {
    Category newCategory = new Category();



    //This runs on form submit
    async void HandleFormSubmit()
    {

        //post to profile controller
        await Http.PostAsJsonAsync<Category>("Category/NewCategory", newCategory);
    }

}
